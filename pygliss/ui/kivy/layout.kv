<AnnotatorLayout>
	canvas.before:
		Color:
			rgba:(1,1,1,1)
		Rectangle:
			pos:self.pos
			size:self.size

	BoxLayout:
		orientation:"vertical"
		size:root.width, root.height

		Image:
			id:main_image
		    source: 'harmonic_series.png'

		Button:
			size_hint:(1, .10)
			font_size:32
			text:"Calculate Chords"
			on_press: root.press()

		Button:
			size_hint:(1, .10)
			font_size:32
			text:"Next Page"
			on_press: root.press_next()

		Button:
			size_hint:(1, .10)
			font_size:32
			text:"Previous Page"
			on_press: root.press_prev()

